{
  "env": {
    "es2024": true,
    "node": true,
    "jest/globals": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended",
    "plugin:jest-formatting/recommended",
    "plugin:jest/style",
    // https://github.com/prettier/eslint-config-plugin
    // by adding this config last, we can overwrite any other styling rules from eslint configs
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import", "jest-formatting", "jest"],
  "rules": {
    "camelcase": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.test.js", "**/*.pacts.js"]
      }
    ],
    "no-underscore-dangle": 0,
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "next"
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "next": "return",
        "prev": "*"
      }
    ]
  }
}
